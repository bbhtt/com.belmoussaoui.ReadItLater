{
  "app-id": "com.belmoussaoui.ReadItLater",
  "runtime": "org.gnome.Platform",
  "runtime-version": "43",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
  "command": "read-it-later",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--device=dri",
    "--share=network",
    "--talk-name=org.freedesktop.secrets"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "env": {
      "RUSTFLAGS": "--remap-path-prefix =../",
      "CARGO_HOME": "/run/build/read-it-later/cargo",
      "RUST_LOG": "read_it_later=info"
    }
  },
  "modules": [
    {
      "name": "read-it-later",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "archive",
          "url": "https://gitlab.gnome.org/World/read-it-later/-/archive/0.3.0/read-it-later-0.3.0.tar.gz",
          "sha256": "7caef38fad8377772055eedecb3e98b65c639f39c21078f3f65f958453c368fb"
        }
      ]
    }
  ]
}
